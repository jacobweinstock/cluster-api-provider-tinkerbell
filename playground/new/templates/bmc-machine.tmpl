apiVersion: bmc.tinkerbell.org/v1alpha1
kind: Machine
metadata:
    name: bmc-$NODE_NAME
    namespace: $NAMESPACE
spec:
    connection:
        authSecretRef:
            name: bmc-creds
            namespace: $NAMESPACE
        host: $BMC_IP
        insecureTLS: true
        providerOptions:
            ipmitool:
                port: $BMC_PORT